@model MvsStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Ürün Adı </label>
        <input type="text" class="form-control" name="URUNAD" placeholder="Ürün Adı Giriniz" />
    </div>
    <div>
        <label>Markası</label>
        <input type="text" class="form-control" name="MARKA" placeholder="Ürün Markası Giriniz" />
    </div>
    <div>
        <label>Kategori Seçiniz </label>
        @Html.DropDownListFor(m => m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Fiyatı</label>
        <input type="text" class="form-control" name="FIYAT" placeholder="Ürün Fiyatı Giriniz"/>
    </div>
    <div>
        <label>Stok Adet</label>
        <input type="text" class="form-control" name="STOK" placeholder="Ürün Stok Adedi Giriniz" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>
